{
  "manifest_version": 3,
  "name": "Cocomine VPN Extension",
  "description": "Cocomine VPN 瀏覽器擴展, 控制瀏覽器代理設定",
  "version": "1.1.6",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png",
    "192": "icon-192.png",
    "512": "icon-512.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": "action-icon.png"
  },
  "permissions": [
    "proxy",
    "storage",
    "activeTab",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "*://*.vpn.cocomine.cc/*",
    "*://api.cocomine.cc/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": [
        "*://*.vpn.cocomine.cc/*",
        "http://localhost:3000/*"
      ]
    }
  ]
}